<ul class="bento-grid">
    <li class="bento-grid__item bento">
        <img
            src="/assets/images/hompage/hero.png"
            class="bento__image"
        />
        <div class="bento__content">
            <h3 class="bento__headline">Die Kraft der Natur erleben</h3>
            <a href="/alle-touren" class="button button--secondary">
                Erfahre mehr
            </a>
        </div>
    </li>
    <li class="bento-grid__item bento">
        <div class="bento__content">
            <h3 class="bento__headline">
                Abwechslungsreich unterwegs: Mountainbiking & Trailrunning in Österreich
            </h3>
            <dl class="definition-list">
                <div class="definition-list__item">
                    <dt class="definition-list__headline sr-only">Länge der Strecke</dt>
                    <dd class="definition-list__definition">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#757357" class="definition-list__icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                        </svg>
                        Insgesamt 8 Touren
                    </dd>
                </div>
                <div class="definition-list__item">
                    <dt class="definition-list__headline sr-only">Dauer der Strecke</dt>
                    <dd class="definition-list__definition">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#757357" class="definition-list__icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                        </svg>
                        Über 15 Stunden
                    </dd>
                </div>
            </dl>
            <a href="/alle-touren" class="button button--primary">
                Erfahre mehr
            </a>
        </div>
    </li>
    <li class="bento-grid__item bento">
        <div class="bento__content">
            <h3 class="bento__headline">
                Rondane von Nord nach Süd – 6 Tage in Norwegens ältestem Nationalpark
            </h3>
            <dl class="definition-list">
                <div class="definition-list__item">
                    <dt class="definition-list__headline sr-only">Länge der Strecke</dt>
                    <dd class="definition-list__definition">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#757357" class="definition-list__icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                        </svg>
                        Insgesamt 8 Touren
                    </dd>
                </div>
                <div class="definition-list__item">
                    <dt class="definition-list__headline sr-only">Dauer der Strecke</dt>
                    <dd class="definition-list__definition">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#757357" class="definition-list__icon">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                        </svg>
                        Über 15 Stunden
                    </dd>
                </div>
            </dl>
            <a href="/alle-touren" class="button button--secondary">
                Erfahre mehr
            </a>
        </div>
    </li>
    <li class="bento-grid__item">
        <div class="bento__content bento__content--flex">
            {% set class = "bento__icon" %}
            {% include "logo.njk" %}
            <h3 class="bento__headline">
                Erstelle selbst eine Tour und packe deine Sachen!
            </h3>
        </div>
    </li>
</ul>