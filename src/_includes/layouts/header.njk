<header class="header">
    <a href="/" class="header__logo">
        {% set class = "header__logo-icon" %}
        {% include "icons/logo.svg" %}
        <span><strong>New</strong>Paths</span>
    </a>
    <nav class="navigation">
        <button class="navigation__button">Men√º</button>
        <div class="navigation__wrapper">
            <ul class="navigation__list">
                <li class="navigation__list-item">
                    <button class="navigation__sublist-button link">
                        <span>Alle Touren</span>
                        {% set class = "navigation__sublist-icon" %}
                        {% include "icons/chevron.svg" %}
                    </button>
                    <ul class="navigation__sublist">
                        {% for tour in tours %}
                            {% set url = "/" + tour.url %}
                            {% set label = tour.title %}
                            {% include "components/nav-item.njk" %}
                        {% endfor %}
                    </ul>
                </li>

                {% set url = "/kontakt/" %}
                {% set label = "Kontakt" %}
                {% include "components/nav-item.njk" %}

                {% set url = "https://www.komoot.com/de-de" %}
                {% set label = "Weitere Inspirationen" %}
                {% set isExternal = true %}
                {% include "components/nav-item.njk" %}
            </ul>
        </div>
    </nav>
</header>