<header class="header">
    <a href="/" class="header__logo">
        {% set class = "header__logo-icon" %}
        {% include "components/logo.njk" %}
        <span><strong>New</strong>Paths</span>
    </a>
    <nav class="navigation">
        <button class="navigation__button">Menü</button>
        <div class="navigation__wrapper">
            <ul class="navigation__list">
                <li class="navigation__list-item">
                    <button class="navigation__sublist-button link">
                        <span>Alle Touren</span>
                        <svg class="navigation__sublist-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                        </svg>
                    </button>
                    <ul class="navigation__sublist">
                        {% for tour in tours %}
                            {% set url = "/alle-touren/" + tour.url %}
                            {% set label = tour.title %}
                            {% include "components/nav-item.njk" %}
                        {% endfor %}
                    </ul>
                </li>
                {% set url = "/ueber-new-paths/" %}
                {% set label = "Über NewPaths" %}
                {% include "components/nav-item.njk" %}

                {% set url = "/kontakt/" %}
                {% set label = "Kontakt" %}
                {% include "components/nav-item.njk" %}
            </ul>
        </div>
    </nav>
</header>