<ul class="teaser-list">
    {% for tour in tours %}
        <li class="teaser-list__item">
            <a href="/{{ tour.url }}" class="teaser">
                <div class="teaser__image-wrapper">
                    <img
                        src="{{ tour.image }}"
                        loading="eager"
                        class="teaser__image"
                        alt="{{ tour.alt }}"
                    />
                    <div class="teaser__button button button--icon button--secondary">
                        {% include "icons/arrow.svg" %}
                    </div>
                </div>
                <div class="teaser__content">
                    <h4 class="teaser__headline">{{ tour.title }}</h4>
                    {% set items = [
                        { label: "LÃ¤nge der Strecke", value: tour.length, icon: "icons/distance.svg" },
                        { label: "Dauer der Strecke", value: tour.duration, icon: "icons/duration.svg" }
                    ] %}
                    {% include "components/definition-list.njk" %}
                </div>
            </a>
        </li>
    {% endfor %}
</ul>