<ul class="teaser-list">
    {% for tour in tours %}
        <li class="teaser-list__item">
            <a href="/{{ tour.url }}" class="teaser">
                <img
                    src="{{ tour.image }}"
                    loading="eager"
                    class="teaser__image"
                    alt="{{ tour.title }}"
                />
                <div class="teaser__button button button--icon button--secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
                    </svg>
                </div>
                <div class="teaser__content">
                    <h3 class="teaser__headline">{{ tour.title }}</h3>
                    {% set items = [
                        { label: "LÃ¤nge der Strecke", value: tour.length, icon: "icons/distance.svg" },
                        { label: "Dauer der Strecke", value: tour.duration, icon: "icons/duration.svg" }
                    ] %}
                    {% include "components/definition-list.njk" %}
                </div>
            </a>
        </li>
    {% endfor %}
</ul>